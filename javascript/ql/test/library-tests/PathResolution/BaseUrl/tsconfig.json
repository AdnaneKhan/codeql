{
    "include": ["."],
    "compilerOptions": {
        // Path mappings are resolved relative to baseUrl
        "baseUrl": "./base",
        "paths": {
            "@/*": ["lib/*"],
            "#/*": ["./lib/*"], // relative paths here are also resolved from the base url
            "@/*.xyz": ["lib/*"],
            "@": ["lib/nostar.ts"]
        }
    }
}
